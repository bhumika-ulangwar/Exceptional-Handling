#include <iostream>
using namespace std;

int main() {
    float n1,n2,ans;
    cout<<"enter values of numbers 1 and 2:";
    cin>>n1>>n2;
    try{
        if(n2==0){
            throw n2;
        }
        else{
            ans = n1/n2;
            cout<<"Answer ="<<ans<<endl;
        }
    }
    catch(float num){
        cout<<"\n ERORR: Division by"<<num<<endl;
    }
    return 0;
}

//output
enter values of numbers 1 and 2:3 4
Answer =0.75
